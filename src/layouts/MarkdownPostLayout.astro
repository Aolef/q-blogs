---
const { frontmatter } = Astro.props;
---
<meta charset="utf-8" />
<div class="blogPage">
    <div class="blogPageHeader">
        <h1>{frontmatter.title}</h1>
    </div>
    <div class="blogPageInfo">
        <div>
            <span>作者：</span>
            <span>{frontmatter.author}</span>
        </div>
        <div>
            <span>发表日期：</span>
            <span>{frontmatter.pubDate.toString().slice(0,10)}</span>
        </div>
        <div>
            <span>标签：</span>
            {frontmatter.tags.map((tag:any) => <span class="tagItem">{tag}</span>)}
        </div>
    </div>
    <slot />
</div>
<style>
    .blogPage {
        margin: 0 auto;
        max-width: 1000px;
    }
    .blogPageInfo {
        font-size: 14px;
    }
    .tagItem {
        background-color: #f5f5f5;
        padding: 1px 5px;
        line-height: 1.2;
        margin-right: 5px;
        color: #666;
        border-radius: 3px;
        font-size: 12px;
    }
</style>